<h1>Friends Index</h1>
<h2>Total Friends: {{model.length}}</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |friend|}}
            <tr>
                <td>{{link-to friend.fullName  'friends.show' friend}}</td>
                <td><a href="#" {{action "delete" friend}} style="color: red;">Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
