
<table class="primary">
    <thead>
        <tr>
            <th>Name</th>
            <th>Articles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |friend|}}
            <tr>
                <td>{{link-to friend.fullName "articles" friend}}</td>
                <td>{{friends.totalArticles}}</td>
                <td><a href="#" {{action "delete" friend}} style="color: red;">Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
